<div class="twelve wide column">
	<div class="ui fluid raised card chatbox">
		<div class="content">
			<div class="ui feed">
			  <div class="event">
			    <div class="content">
			    <% @messages.each do |message|%>
				    <div class="event">
				   	 <div class="content">
				     	 <div class="summary">
				        	 <em><%= message.user.username %>: </em><%= message.body %>
				      	</div>
				   	 </div>
				  	</div>
			    <% end %>
			    </div>
			  </div>
			</div>
		</div>
		<div class="extra content">
		  <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
		    <div class="field">
		    	<div class="ui fluid icon input">
				  <%= f.text_field :body, placeholder: "Type something..." %>
				  <i class="bordered inverted orange edit icon"></i>
				</div>
		    </div>
		  <% end %>
		</div>
	</div>
</div>